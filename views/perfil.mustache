<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/public/css/header.css">
    <link rel="stylesheet" href="/public/css/footer.css">
    <link rel="stylesheet" href="/public/css/perfil.css">
    <title>Perfil</title>
</head>
<body>
    <nav>
        <ul>
            <li><a href="/inicio">Inicio</a></li>
            <li><a href="/ranking">Ranking</a></li>
            <li><a href="/partidas">Partidas</a></li>
            <li><a href="/perfil">Perfil</a></li>
            <li><a href="/logout">Cerrar sesión</a></li>
        </ul>
    </nav>

    <main>
        <h1>Perfil</h1>
        <div class="user-data">
            {{#perfil}}
                <div class="user-info">
                    <img src="{{foto}}" alt="fotitoPerfil" class="profile-pic">
                    <div class="text-info">
                        <h4>Nombre de usuario: {{nombre_de_usuario}}</h4>
                        <h4>Nombre: {{nombre}}</h4>
                        <h4>Apellido: {{apellido}}</h4>
                    </div>
                </div>
                <div class="user-info">
                    <img src="{{qrUrl}}" alt="QR Code" class="qr-pic">
                    <div class="text-info">
                        <h4>Email: {{email}}</h4>
                        <h4>Año de nacimiento: {{año_nacimiento}}</h4>
                        <h4>País: {{pais}}</h4>
                        <h4>Ciudad: {{ciudad}}</h4>
                        <h4>Genero: {{genero}}</h4>
                        <h4>Puntaje máximo: {{puntaje}} puntos</h4>
                    </div>
                </div>
            {{/perfil}}

            {{#perfilOtro}}
                <div class="user-info">
                    <img src="{{foto}}" alt="fotitoPerfil" class="profile-pic">
                    <div class="text-info">
                        <h4>Nombre de usuario: {{nombre_de_usuario}}</h4>
                        <h4>País: {{pais}}</h4>
                        <h4>Ciudad: {{ciudad}}</h4>
                        <h4>Genero: {{genero}}</h4>
                        <h4>Puntaje máximo: {{puntaje}} puntos</h4>
                    </div>
                </div>
                <img src="{{qrUrl}}" alt="QR Code" class="qr-pic" style="width: 250px;height: 250px;">
            {{/perfilOtro}}

        </div>
    </main>

</body>
</html>