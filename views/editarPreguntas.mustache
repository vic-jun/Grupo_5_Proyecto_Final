<main>
    <form action="/crearPregunta" method="post" class="crear-pregunta-form">
        <input type="hidden">
        <input type="submit" value="Generar pregunta">
    </form>
    {{#preguntas}}
        <div class="pregunta">
            <h2>{{pregunta_id}}. {{pregunta}}</h2>
            <div class="contenedor">
                <form action="/admin/modificarPregunta" method="post">
                    <input type="hidden" name="pregunta_id" value="{{pregunta_id}}">
                    <input type="submit" value="Modificar pregunta">
                </form>
                <form action="/admin/eliminarPregunta" method="post">
                    <input type="hidden" name="pregunta_id" value="{{pregunta_id}}">
                    <input type="submit" value="Eliminar pregunta">
                </form>
            </div>
            <p>------------------------------------------------------------------------------------------------------------------------------------------------------</p>
        </div>
    {{/preguntas}}
</main>

